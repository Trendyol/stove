{
  "extends": [
    "config:recommended",
    "group:allNonMajor",
    "schedule:earlyMondays"
  ],
  "branchPrefix": "renovate/",
  "packageRules": [
    {
      "allowedVersions": "!/M/",
      "matchPackageNames": ["/io.kotest:kotest.*/"]
    },
    {
      "matchPackageNames": ["org.jetbrains.kotlin"],
      "groupName": "kotlin deps"
    },

    {
      "matchDepTypes": ["plugin"],
      "groupName": "gradle plugins"
    }
  ]
}
