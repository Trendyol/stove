{
  "extends": [
    "config:recommended",
    "group:allNonMajor",
    "schedule:earlyMondays"
  ],
  "branchPrefix": "renovate/",
  "packageRules": [
    {
      "allowedVersions": "!/M/",
      "matchPackageNames": ["/io.kotest:kotest.*/"]
    },
    {
      "matchPackageNames": ["org.jetbrains.kotlin", "com.google.devtools**"],
      "groupName": "kotlin dependencies"
    }
  ]
}
