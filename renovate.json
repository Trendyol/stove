{
  "extends": [
    "config:recommended",
    "group:allNonMajor",
    "group:kotlinMonorepo",
    "schedule:earlyMondays"
  ],
  "branchPrefix": "renovate/",
  "packageRules": [
    {
      "allowedVersions": "!/M/",
      "matchPackageNames": ["/io.kotest:kotest.*/"]
    },
    {
      "matchPackageNames": [
        "/org.jetbrains**"
      ],
      "groupName": "JetBrains"
    }
  ]
}
